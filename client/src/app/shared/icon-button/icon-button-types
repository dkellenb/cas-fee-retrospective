export class IconButtonType {

  /*Static Buttons*/
  static ADD:IconButtonType = new IconButtonType('icon-button__icon_add', false);
  static ABOARD:IconButtonType = new IconButtonType('icon-button__icon_aboard', false);
  static DELETE:IconButtonType = new IconButtonType('.icon-button__icon_delete', false);
  static CHECK_MARK:IconButtonType = new IconButtonType('.icon-button__icon_check-mark', false);
  static ARROW_UP:IconButtonType = new IconButtonType('.icon-button__icon_collapsible_close', false);
  static ARROW_DOWN:IconButtonType = new IconButtonType('.icon-button__icon_collapsible_open', false);
  static ARROW_LEFT:IconButtonType = new IconButtonType('.icon-button__icon_forward', false);
  static ARROW_RIGHT:IconButtonType = new IconButtonType('.icon-button__icon_back', false);
  static VOTE:IconButtonType = new IconButtonType('.icon-button__icon_vote', false);

  /*Toggle Buttons*/
  static COLLAPSIBLE:IconButtonType = new IconButtonType('.icon-button__icon_vote', true);

  private _isToggleButton;
  private _className:string;

  private constructor(className:string, isToggleButton:boolean) {
    this._className = className;
    this._isToggleButton = isToggleButton;
  }

  get isToggleButton() {
    return this._isToggleButton;
  }

  get className():string {
    return this._className;
  }
}
