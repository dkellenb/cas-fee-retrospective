{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],    
    "types": [
      "inversify",
      "inversify-express-utils",
      "mocha",
      "reflect-metadata"
    ],
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "../client/src/app/shared/model/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}