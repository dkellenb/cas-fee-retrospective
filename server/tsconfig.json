{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "inversify",
      "inversify-express-utils",
      "mocha",
      "reflect-metadata"
    ],
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "src/**/*.ts",
    "../shared/src/**/*.ts"
  ],
  "files": [
    "../shared/src/model/retrospective.ts",
    "../shared/src/model/user.ts",
    "../shared/src/util/uuid.ts",
    "src/constant/tags.ts",
    "src/constant/types.ts",
    "src/controller/retrospective.ts",
    "src/controller/user.ts",
    "src/service/retrospective.ts",
    "src/server.ts"
  ]
}